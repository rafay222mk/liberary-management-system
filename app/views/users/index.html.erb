<html>
  <head>
    <title>Home Page</title>
  </head>
  <div style="float: inline-end; display; flex" >
    <h3 style="text-align: center" ><%= button_to 'Sign Out' , destroy_user_session_path, method: :delete , data: { confirm: '
                Dp you want to sing out ? '}, data: { turbo: false }  %></h3>
  </div>
  <div class="container">
    <body>
    <% if params[:show] == "librarian_list"%>
    <h1 style="text-align: center; color: Yellow">
    List of Librarian </h1>
    <%else%>
    <h1 style="text-align: center; color: Yellow">
    List of Studnets </h1>
    <%end%>

        <h3> <%= link_to 'Back' , welcome_home_path %> </h3>
    <table class="table table-striped table-dark">
      <thead>
      <th>User Name</th>
      <th>Eamil</th>
      <th>Role</th>
      <th colspan="3">Actions</th>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.user_name %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td><%= link_to 'View' , user_path(user)%></td>
          <td>
            <%= button_to 'Delete' , user_path(user) if can? :destroy, user , method: :delete , data: { turbo: false }  %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    </body>
  </div>
</html>

