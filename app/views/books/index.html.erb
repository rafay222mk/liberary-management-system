<html>
  <head>
    <title>Home Page</title>
    <style>
      .links a {
        color: yellow;
      }
    </style>
  </head>
  <div style="float: inline-end; display; flex" >
    <h3 style="text-align: center" ><%= button_to 'Sign Out' , destroy_user_session_path, method: :delete , data: { confirm: '
                Dp you want to sing out ? '}, data: { turbo: false }  %></h3>
  </div>
  <div class="container">
    <body>
    <h1 style="text-align: center; color: yellow">List of the Books</h1>
      <div class="links" >
        <h2><%= link_to 'new' , new_book_path if can? :create, Book  %></h2>
      <h3> <%= link_to 'Back' , welcome_home_path    %> </h3>
      </div>
    <div  >
      <table class="table table-striped table-dark">
      <thead>
      <th>Title</th>
      <th>Discription</th>
      <th>Publish Date</th>
      <th>Author Name</th>
      <th colspan="3">Actions</th>
      </thead>
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.description %></td>
          <td><%= book.publish_date %></td>
          <td><%= book.user.user_name %></td>
          <td><%= link_to 'View' , book %></td>
          <td>
            <%= link_to 'Edit' , edit_book_path(book) if can? :update, book     %>
          </td>
            <td>
            <%= button_to 'Delete' , book_path(book) ,method: :delete , data: { turbo: false } %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    </div>
    |</body>
  </div>
</html>

