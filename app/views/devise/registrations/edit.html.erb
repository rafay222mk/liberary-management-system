<html>
  <head>
    <style>
        .csform{
            text-align: center;
            margin: 10px;
        }
        .csform > label{
            align-self: center;
            color: whitesmoke;
        }
        .csform > input[type="text"]{
            background-color: wheat;
            border:none;
        }
        .csform > input[type="email"]{
            background-color: wheat;
            border:none;
        }
        .csform > input[type="submit"]{
            background-color: #59238F;
            height: 100%;
            width: 100%;
            border-radius: 30px;
            border: none;
            padding: 10px;
        }
    </style>
  </head>
  <body>
  <div style=" display: flex; justify-content: center">
    <div style="background-color: #000000; padding: 50px; margin: 30px; border-radius: 10px; ">
      <h2 style="color: wheat;text-align: center">Edit User</h2>
      <h2 style="color: wheat;text-align: center" ><%= current_user.role %><br /></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="csform">
          <%= f.label :User_Name %>
          </div>
        <div class="csform">
          <%= f.text_field :user_name , autofocus: true, autocomplete: "user_name" %>
        </div>

        <div class="csform">
          <%= f.label :email %><br />
          </div>
        <div class="csform">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="csform">
          <%= f.label :password %><br><i style= " color: yellow; " >(leave blank if you don't want to change it)</i>
          <% if @minimum_password_length %>
            <em style="color: yellow">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          </div>
        <div class="csform">
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="csform">
          <%= f.label :password_confirmation %><br />
          </div>
        <div class="csform">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="csform" >
          <%= f.label :current_password %> <br> <i style= "color: yellow;" >(we need your current password to confirm your changes)</i><br />
        </div>
        <div class="csform" >
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div> 

        <div class="csform">
          <%= f.submit "Update" %>
        </div>
      <% end %>

      <h3 style="color: wheat;text-align: center" >Cancel my account</h3>

      <p style="color: wheat;text-align: center" >Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), method: :delete , data: { turbo: false } %></p>

      <%= link_to "Back", :back %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
  </body>
</html>




