<html>
  <head>
    <title>Log In</title>
    <style>
      .csform{
          text-align: center;
          margin: 10px;
      }
      .csform > label{
          align-self: center;
          color: whitesmoke;
      }
      .csform > input[type="text"]{
          background-color: transparent;
          border:none;
      }
      .csform > input[type="submit"]{
          background-color: #3B0000;
          height: 100%;
          width: 100%;
          border-radius: 30px;
          border: none;
          padding: 10px;
          color: wheat;
      }
    </style>
  </head>
  <body>
  <div style=" display: flex; justify-content: center">
    <div style="background-color: #8B4513; padding: 50px; margin: 30px; border-radius: 10px; ">
      <h2 style="text-align: center; color: #3B0000;"  >Forgot your password?</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <div class="csform">
          <%= f.label :email %>
        </div>
        <div class="csform"  >
          <%= f.email_field :email, autofocus: true, autocomplete: "user_name" %>
        </div>
        <div class="csform">
          <%= f.submit "Send me reset password instructions" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
      </div>
    </div>
  </body>
</html>

